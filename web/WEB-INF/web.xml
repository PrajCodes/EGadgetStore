<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee                              http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>DisplayProducts</servlet-name>
        <servlet-class>prajna.controllerservlet.DisplayProducts</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayProducts</servlet-name>
        <url-pattern>/displayProducts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayProducts</servlet-name>
        <url-pattern>/Index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductDetails</servlet-name>
        <servlet-class>prajna.controllerservlet.ProductDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductDetails</servlet-name>
        <url-pattern>/productdetails</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserIO</servlet-name>
        <servlet-class>prajna.data.UserIO</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserIO</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserIO</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>prajna.controllerservlet.CartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/loadCart</url-pattern>
        <url-pattern>/addtocart</url-pattern>
        <url-pattern>/LoginComplete</url-pattern>
        <url-pattern>/Checkout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/updateProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/checkUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/removeProduct</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>prajna.controllerservlet.OrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/completePayment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/viewOrders</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RetreiveOrder</servlet-name>
        <servlet-class>prajna.data.RetreiveOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RetreiveOrder</servlet-name>
        <url-pattern>/RetreiveOrder</url-pattern>
    </servlet-mapping>
    <error-page>
        <location>/error_404.jsp</location>
    </error-page>
    <welcome-file-list>
        <welcome-file>
            index.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
